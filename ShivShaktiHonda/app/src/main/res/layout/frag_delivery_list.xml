<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/delivery_rlMonthSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/delivery_ivPreMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_left_black"
            android:padding="@dimen/margin_10dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/delivery_txtMonthYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dec-2018"
            android:layout_centerVertical="true"
            android:textSize="@dimen/margin_20dp"
            android:textColor="@color/text_color"
            android:gravity="center"
            android:padding="@dimen/margin_10dp"/>

        <ImageView
            android:id="@+id/delivery_ivNextMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_right_black"
            android:padding="@dimen/margin_10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/delivery_rvList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/delivery_rlMonthSelection"
        android:layout_marginTop="@dimen/margin_10dp"/>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/delivery_fabAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@android:drawable/ic_input_add"
        android:visibility="gone"/>

</RelativeLayout>