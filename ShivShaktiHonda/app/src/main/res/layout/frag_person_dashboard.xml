<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/spDash_txtMonth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nov-2017"
        android:textSize="@dimen/margin_20dp"
        android:textStyle="bold"
        android:textColor="@color/text_color"
        android:gravity="center"
        android:padding="@dimen/margin_10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_red_corner_view"
        android:layout_margin="@dimen/margin_20dp"
        android:padding="@dimen/margin_10dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_incentive"
                android:padding="@dimen/margin_10dp"
                android:textColor="@color/text_color"
                android:textSize="@dimen/margin_18dp" />

            <TextView
                android:id="@+id/spDash_txtIncentive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000"
                android:textColor="@color/text_color"
                android:padding="@dimen/margin_10dp"
                android:textSize="@dimen/margin_18dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_inquiry"
                android:padding="@dimen/margin_10dp"
                android:textColor="@color/text_color"
                android:textSize="@dimen/margin_18dp" />

            <TextView
                android:id="@+id/spDash_txtInquiry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textColor="@color/text_color"
                android:padding="@dimen/margin_10dp"
                android:textSize="@dimen/margin_18dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_booking"
                android:padding="@dimen/margin_10dp"
                android:textColor="@color/text_color"
                android:textSize="@dimen/margin_18dp" />

            <TextView
                android:id="@+id/spDash_txtBooking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15"
                android:textColor="@color/text_color"
                android:padding="@dimen/margin_10dp"
                android:textSize="@dimen/margin_18dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_delivery"
                android:padding="@dimen/margin_10dp"
                android:textColor="@color/text_color"
                android:textSize="@dimen/margin_18dp" />

            <TextView
                android:id="@+id/spDash_txtDelivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="@color/text_color"
                android:padding="@dimen/margin_10dp"
                android:textSize="@dimen/margin_18dp" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>