<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/margin_4dp"
    android:elevation="@dimen/margin_5dp"
    card_view:cardBackgroundColor="@android:color/white"
    android:layout_marginLeft="@dimen/margin_10dp"
    android:layout_marginRight="@dimen/margin_10dp"
    android:layout_marginBottom="@dimen/margin_10dp"
    android:id="@+id/spDelivery_cvParent">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_10dp">

        <TextView
            android:id="@+id/spDelivery_txtDeliveryId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1111 - Activa i"
            android:textSize="@dimen/margin_16dp"
            android:textColor="@color/text_color"
            android:paddingRight="@dimen/margin_10dp" />

        <LinearLayout
            android:id="@+id/spDelivery_llSPParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salesperson Name:"
                android:textSize="@dimen/margin_16dp"
                android:textColor="@color/text_color"
                android:layout_marginTop="@dimen/margin_5dp" />
            <TextView
                android:id="@+id/spDelivery_txtSPName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sapan Soni"
                android:textSize="@dimen/margin_16dp"
                android:textColor="@color/text_color"
                android:layout_marginTop="@dimen/margin_5dp"
                android:paddingLeft="@dimen/margin_10dp"
                android:paddingRight="@dimen/margin_10dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Name:"
                android:textSize="@dimen/margin_16dp"
                android:textColor="@color/text_color"
                android:layout_marginTop="@dimen/margin_5dp" />
            <TextView
                android:id="@+id/spDelivery_txtCustomerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sapan Soni"
                android:textSize="@dimen/margin_16dp"
                android:textColor="@color/text_color"
                android:layout_marginTop="@dimen/margin_5dp"
                android:paddingLeft="@dimen/margin_10dp"
                android:paddingRight="@dimen/margin_10dp" />
        </LinearLayout>
        <TextView
            android:id="@+id/spDelivery_txtDeliveryDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="07-12-2017"
            android:textSize="@dimen/margin_16dp"
            android:textColor="@color/text_color"
            android:layout_marginTop="@dimen/margin_5dp"
            android:paddingRight="@dimen/margin_10dp" />





    </LinearLayout>
</android.support.v7.widget.CardView>