<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" android:id="@+id/inquiryDetail_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_below="@id/inquiryDetail_toolbar"
        android:layout_above="@+id/inquiryDetail_btnBooking">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_10dp">

                <LinearLayout
                    android:id="@+id/inquiryDetail_llSalespersonDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sales Person"
                        android:textSize="@dimen/margin_18dp"
                        android:paddingTop="@dimen/margin_5dp"
                        android:paddingBottom="@dimen/margin_5dp"
                        android:textColor="@color/text_color" />

                    <TextView
                        android:id="@+id/inquiryDetail_txtSalespersonName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Deep Amin"
                        android:textSize="@dimen/margin_16dp"
                        android:paddingTop="@dimen/margin_5dp"
                        android:paddingBottom="@dimen/margin_5dp"
                        android:textColor="@color/text_color" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_1dp"
                        android:background="@color/light_gray"
                        android:layout_marginTop="@dimen/margin_10dp"/>

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Inquiry_name"
                    android:textSize="@dimen/margin_18dp"
                    android:paddingTop="@dimen/margin_5dp"
                    android:paddingBottom="@dimen/margin_5dp"
                    android:textColor="@color/text_color" />

                <TextView
                    android:id="@+id/inquiryDetail_txtName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Deep Amin"
                    android:textSize="@dimen/margin_16dp"
                    android:paddingTop="@dimen/margin_5dp"
                    android:paddingBottom="@dimen/margin_5dp"
                    android:textColor="@color/text_color" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_1dp"
                    android:background="@color/light_gray"
                    android:layout_marginTop="@dimen/margin_10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Inquiry_mobile_no"
                    android:textSize="@dimen/margin_18dp"
                    android:paddingTop="@dimen/margin_5dp"
                    android:paddingBottom="@dimen/margin_5dp"
                    android:textColor="@color/text_color" />

                <TextView
                    android:id="@+id/inquiryDetail_txtMobileNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="9988556633"
                    android:textSize="@dimen/margin_16dp"
                    android:paddingTop="@dimen/margin_5dp"
                    android:paddingBottom="@dimen/margin_5dp"
                    android:textColor="@color/text_color" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_1dp"
                    android:background="@color/light_gray"
                    android:layout_marginTop="@dimen/margin_10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Inquiry_address"
                    android:textSize="@dimen/margin_18dp"
                    android:paddingTop="@dimen/margin_5dp"
                    android:paddingBottom="@dimen/margin_5dp"
                    android:textColor="@color/text_color" />

                <TextView
                    android:id="@+id/inquiryDetail_txtAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="9988556633"
                    android:textSize="@dimen/margin_16dp"
                    android:paddingTop="@dimen/margin_5dp"
                    android:paddingBottom="@dimen/margin_5dp"
                    android:textColor="@color/text_color" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_1dp"
                    android:background="@color/light_gray"
                    android:layout_marginTop="@dimen/margin_10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Inquiry_vehicle_type"
                    android:textSize="@dimen/margin_18dp"
                    android:paddingTop="@dimen/margin_5dp"
                    android:paddingBottom="@dimen/margin_5dp"
                    android:textColor="@color/text_color"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/margin_10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Inquiry_detail_model"
                        android:textSize="@dimen/margin_18dp"
                        android:paddingTop="@dimen/margin_5dp"
                        android:paddingBottom="@dimen/margin_5dp"
                        android:textColor="@color/text_color" />

                    <TextView
                        android:id="@+id/inquiryDetail_txtVehicleModel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Activa 4G"
                        android:textSize="@dimen/margin_16dp"
                        android:paddingTop="@dimen/margin_5dp"
                        android:paddingBottom="@dimen/margin_5dp"
                        android:textColor="@color/text_color"
                        android:layout_marginLeft="@dimen/margin_10dp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Type :"
                        android:textSize="@dimen/margin_18dp"
                        android:paddingTop="@dimen/margin_5dp"
                        android:paddingBottom="@dimen/margin_5dp"
                        android:textColor="@color/text_color" />

                    <TextView
                        android:id="@+id/inquiryDetail_txtVehicleType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SC"
                        android:textSize="@dimen/margin_16dp"
                        android:paddingTop="@dimen/margin_5dp"
                        android:paddingBottom="@dimen/margin_5dp"
                        android:textColor="@color/text_color"
                        android:layout_marginLeft="@dimen/margin_10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Inquiry_detail_variant"
                        android:textSize="@dimen/margin_18dp"
                        android:paddingTop="@dimen/margin_5dp"
                        android:paddingBottom="@dimen/margin_5dp"
                        android:textColor="@color/text_color" />

                    <TextView
                        android:id="@+id/inquiryDetail_txtVehicleVariant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="First"
                        android:textSize="@dimen/margin_16dp"
                        android:paddingTop="@dimen/margin_5dp"
                        android:paddingBottom="@dimen/margin_5dp"
                        android:textColor="@color/text_color"
                        android:layout_marginLeft="@dimen/margin_10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Inquiry_detail_color"
                        android:textSize="@dimen/margin_18dp"
                        android:paddingTop="@dimen/margin_5dp"
                        android:paddingBottom="@dimen/margin_5dp"
                        android:textColor="@color/text_color" />

                    <TextView
                        android:id="@+id/inquiryDetail_txtVehicleColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Black"
                        android:textSize="@dimen/margin_16dp"
                        android:paddingTop="@dimen/margin_5dp"
                        android:paddingBottom="@dimen/margin_5dp"
                        android:textColor="@color/text_color"
                        android:layout_marginLeft="@dimen/margin_10dp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_1dp"
                    android:background="@color/light_gray"
                    android:layout_marginTop="@dimen/margin_10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Inquiry_detail_inquiry_title"
                        android:textSize="@dimen/margin_18dp"
                        android:paddingTop="@dimen/margin_5dp"
                        android:paddingBottom="@dimen/margin_5dp"
                        android:textColor="@color/text_color" />

                    <TextView
                        android:id="@+id/inquiryDetail_txtInquiryTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="News"
                        android:textSize="@dimen/margin_16dp"
                        android:paddingTop="@dimen/margin_5dp"
                        android:paddingBottom="@dimen/margin_5dp"
                        android:textColor="@color/text_color"
                        android:layout_marginLeft="@dimen/margin_10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Inquiry_detail_customer_type"
                        android:textSize="@dimen/margin_18dp"
                        android:paddingTop="@dimen/margin_5dp"
                        android:paddingBottom="@dimen/margin_5dp"
                        android:textColor="@color/text_color" />

                    <TextView
                        android:id="@+id/inquiryDetail_txtCustomerType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hot"
                        android:textSize="@dimen/margin_16dp"
                        android:paddingTop="@dimen/margin_5dp"
                        android:paddingBottom="@dimen/margin_5dp"
                        android:textColor="@color/text_color"
                        android:layout_marginLeft="@dimen/margin_10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Inquiry_detail_purchase_type"
                        android:textSize="@dimen/margin_18dp"
                        android:paddingTop="@dimen/margin_5dp"
                        android:paddingBottom="@dimen/margin_5dp"
                        android:textColor="@color/text_color" />

                    <TextView
                        android:id="@+id/inquiryDetail_txtPurchaseType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cash"
                        android:textSize="@dimen/margin_16dp"
                        android:paddingTop="@dimen/margin_5dp"
                        android:paddingBottom="@dimen/margin_5dp"
                        android:textColor="@color/text_color"
                        android:layout_marginLeft="@dimen/margin_10dp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_1dp"
                    android:background="@color/light_gray"
                    android:layout_marginTop="@dimen/margin_10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Feedback"
                    android:textSize="@dimen/margin_18dp"
                    android:paddingTop="@dimen/margin_5dp"
                    android:paddingBottom="@dimen/margin_5dp"
                    android:textColor="@color/text_color"/>

                <TextView
                    android:id="@+id/inquiryDetail_txtFeedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Feedback"
                    android:textSize="@dimen/margin_16dp"
                    android:paddingTop="@dimen/margin_5dp"
                    android:paddingBottom="@dimen/margin_5dp"
                    android:textColor="@color/text_color"
                    android:layout_marginBottom="@dimen/margin_20dp"/>




            </LinearLayout>

        </ScrollView>
    </LinearLayout>

    <Button
        android:id="@+id/inquiryDetail_btnBooking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Inquiry_book_btn"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:textSize="@dimen/margin_18dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>