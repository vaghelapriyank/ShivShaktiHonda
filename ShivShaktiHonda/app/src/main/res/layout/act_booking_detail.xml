<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <include layout="@layout/toolbar" android:id="@+id/bookingDetail_toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bookingDetail_toolbar"
            android:layout_above="@+id/bookingDetail_btnDelivery">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/margin_10dp"
                        android:layout_marginRight="@dimen/margin_10dp"
                        android:layout_marginTop="@dimen/margin_10dp">

                        <TextView
                            android:layout_width="@dimen/margin_0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/booking_form_customer_name"
                            android:textSize="@dimen/margin_18dp"
                            android:paddingTop="@dimen/margin_5dp"
                            android:paddingBottom="@dimen/margin_5dp"
                            android:textColor="@color/text_color"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/bookingDetail_txtCustomerName"
                            android:layout_width="@dimen/margin_0dp"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="10001"
                            android:textSize="@dimen/margin_16dp"
                            android:textColor="@color/text_color"
                            android:padding="@dimen/margin_10dp"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/margin_10dp"
                        android:layout_marginRight="@dimen/margin_10dp">

                        <TextView
                            android:layout_width="@dimen/margin_0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/booking_form_customer_mobile"
                            android:textSize="@dimen/margin_18dp"
                            android:paddingTop="@dimen/margin_5dp"
                            android:paddingBottom="@dimen/margin_5dp"
                            android:textColor="@color/text_color"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/bookingDetail_txtCustomerMobile"
                            android:layout_width="@dimen/margin_0dp"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="10001"
                            android:textSize="@dimen/margin_16dp"
                            android:textColor="@color/text_color"
                            android:padding="@dimen/margin_10dp"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/margin_10dp"
                        android:layout_marginRight="@dimen/margin_10dp">

                        <TextView
                            android:layout_width="@dimen/margin_0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/booking_form_model_name"
                            android:textSize="@dimen/margin_18dp"
                            android:paddingTop="@dimen/margin_5dp"
                            android:paddingBottom="@dimen/margin_5dp"
                            android:textColor="@color/text_color"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/bookingDetail_txtModelName"
                            android:layout_width="@dimen/margin_0dp"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="10001"
                            android:textSize="@dimen/margin_16dp"
                            android:textColor="@color/text_color"
                            android:padding="@dimen/margin_10dp"
                            android:layout_weight="1"/>
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_1dp"
                        android:background="@color/light_gray"
                        android:layout_marginTop="@dimen/margin_10dp"/>



                </LinearLayout>


                <LinearLayout
                    android:id="@+id/bookingDetail_llSalesPersonName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="@dimen/margin_0dp"
                        android:layout_height="wrap_content"
                        android:text="Sales Person:"
                        android:textSize="@dimen/margin_18dp"
                        android:paddingTop="@dimen/margin_5dp"
                        android:paddingBottom="@dimen/margin_5dp"
                        android:textColor="@color/text_color"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/bookingDetail_txtSalesPersonName"
                        android:layout_width="@dimen/margin_0dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="10001"
                        android:textSize="@dimen/margin_16dp"
                        android:textColor="@color/text_color"
                        android:padding="@dimen/margin_10dp"
                        android:layout_weight="1"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:layout_marginTop="@dimen/margin_10dp">

                    <TextView
                        android:layout_width="@dimen/margin_0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/booking_form_id"
                        android:textSize="@dimen/margin_18dp"
                        android:paddingTop="@dimen/margin_5dp"
                        android:paddingBottom="@dimen/margin_5dp"
                        android:textColor="@color/text_color"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/bookingDetail_txtBookingId"
                        android:layout_width="@dimen/margin_0dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="10001"
                        android:textSize="@dimen/margin_16dp"
                        android:textColor="@color/text_color"
                        android:padding="@dimen/margin_10dp"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:layout_marginRight="@dimen/margin_10dp"
                    >

                    <TextView
                        android:layout_width="@dimen/margin_0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/booking_form_amount"
                        android:textSize="@dimen/margin_18dp"
                        android:paddingTop="@dimen/margin_5dp"
                        android:paddingBottom="@dimen/margin_5dp"
                        android:textColor="@color/text_color"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/bookingDetail_txtBookingAmount"
                        android:layout_width="@dimen/margin_0dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="25000"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/margin_16dp"
                        android:padding="@dimen/margin_10dp"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:layout_marginRight="@dimen/margin_10dp"
                    >

                    <TextView
                        android:layout_width="@dimen/margin_0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/booking_form_delivery_date"
                        android:textSize="@dimen/margin_18dp"
                        android:paddingTop="@dimen/margin_5dp"
                        android:paddingBottom="@dimen/margin_5dp"
                        android:textColor="@color/text_color"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/bookingDetail_txtDeliveryDate"
                        android:layout_width="@dimen/margin_0dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="20-12-2018"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/margin_16dp"
                        android:padding="@dimen/margin_10dp"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:layout_marginRight="@dimen/margin_10dp"
                    >

                    <TextView
                        android:layout_width="@dimen/margin_0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/booking_detail_payment_type"
                        android:textSize="@dimen/margin_18dp"
                        android:paddingTop="@dimen/margin_5dp"
                        android:paddingBottom="@dimen/margin_5dp"
                        android:textColor="@color/text_color"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/bookingDetail_txtPaymentBy"
                        android:layout_width="@dimen/margin_0dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/Inquiry_purchase_type_cash"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/margin_16dp"
                        android:padding="@dimen/margin_10dp"
                        android:layout_weight="1"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_1dp"
                    android:background="@color/light_gray"
                    android:layout_marginTop="@dimen/margin_10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Incentive Included Things"
                        android:textSize="@dimen/margin_18dp"
                        android:textColor="@color/text_color"
                        android:padding="@dimen/margin_10dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="@dimen/margin_0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/price_detail_screen_exshowroom"
                            android:textSize="@dimen/margin_18dp"
                            android:textColor="@color/text_color"
                            android:padding="@dimen/margin_10dp"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/bookingDetail_txtExShowroomStatus"
                            android:layout_width="@dimen/margin_0dp"
                            android:layout_height="wrap_content"
                            android:text="Yes"
                            android:gravity="center"
                            android:textSize="@dimen/margin_18dp"
                            android:textColor="@color/text_color"
                            android:padding="@dimen/margin_10dp"
                            android:layout_weight="1"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="@dimen/margin_0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/price_detail_screen_insurance"
                            android:textSize="@dimen/margin_18dp"
                            android:textColor="@color/text_color"
                            android:padding="@dimen/margin_10dp"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/bookingDetail_txtInsuranceStatus"
                            android:layout_width="@dimen/margin_0dp"
                            android:layout_height="wrap_content"
                            android:text="Yes"
                            android:gravity="center"
                            android:textSize="@dimen/margin_18dp"
                            android:textColor="@color/text_color"
                            android:padding="@dimen/margin_10dp"
                            android:layout_weight="1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="@dimen/margin_0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/price_detail_screen_rto"
                            android:textSize="@dimen/margin_18dp"
                            android:textColor="@color/text_color"
                            android:padding="@dimen/margin_10dp"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/bookingDetail_txtRtoStatus"
                            android:layout_width="@dimen/margin_0dp"
                            android:layout_height="wrap_content"
                            android:text="Yes"
                            android:gravity="center"
                            android:textSize="@dimen/margin_18dp"
                            android:textColor="@color/text_color"
                            android:padding="@dimen/margin_10dp"
                            android:layout_weight="1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="@dimen/margin_0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/price_detail_screen_amc"
                            android:textSize="@dimen/margin_18dp"
                            android:textColor="@color/text_color"
                            android:padding="@dimen/margin_10dp"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/bookingDetail_txtAmcStatus"
                            android:layout_width="@dimen/margin_0dp"
                            android:layout_height="wrap_content"
                            android:text="Yes"
                            android:gravity="center"
                            android:textSize="@dimen/margin_18dp"
                            android:textColor="@color/text_color"
                            android:padding="@dimen/margin_10dp"
                            android:layout_weight="1"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="@dimen/margin_0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/price_detail_screen_extra_war"
                            android:textSize="@dimen/margin_18dp"
                            android:textColor="@color/text_color"
                            android:padding="@dimen/margin_10dp"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/bookingDetail_txtEWStatus"
                            android:layout_width="@dimen/margin_0dp"
                            android:layout_height="wrap_content"
                            android:text="Yes"
                            android:gravity="center"
                            android:textSize="@dimen/margin_18dp"
                            android:textColor="@color/text_color"
                            android:padding="@dimen/margin_10dp"
                            android:layout_weight="1"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="@dimen/margin_0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/price_detail_screen_3m_pp"
                            android:textSize="@dimen/margin_18dp"
                            android:textColor="@color/text_color"
                            android:padding="@dimen/margin_10dp"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/bookingDetail_txtMppStatus"
                            android:layout_width="@dimen/margin_0dp"
                            android:layout_height="wrap_content"
                            android:text="Yes"
                            android:gravity="center"
                            android:textSize="@dimen/margin_18dp"
                            android:textColor="@color/text_color"
                            android:padding="@dimen/margin_10dp"
                            android:layout_weight="1"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="@dimen/margin_0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/price_detail_screen_acc"
                            android:textSize="@dimen/margin_18dp"
                            android:textColor="@color/text_color"
                            android:padding="@dimen/margin_10dp"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/bookingDetail_txtAccStatus"
                            android:layout_width="@dimen/margin_0dp"
                            android:layout_height="wrap_content"
                            android:text="Yes"
                            android:gravity="center"
                            android:textSize="@dimen/margin_18dp"
                            android:textColor="@color/text_color"
                            android:padding="@dimen/margin_10dp"
                            android:layout_weight="1"/>


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/bookingDetail_btnDelivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/booking_form_delivery_btn"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:textSize="@dimen/margin_18dp"
            android:textAllCaps="false"
            android:layout_alignParentBottom="true"/>

</RelativeLayout>

